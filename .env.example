# Database
DB_URL=jdbc:postgresql://prod-db:5432/iam_db
DB_USERNAME=iam_prod_user
DB_PASSWORD=secure_prod_password

# Redis
REDIS_HOST=prod-redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# JWT
JWT_SECRET=very-secure-production-jwt-secret-key-256-bits-minimum
JWT_EXPIRATION_MS=3600000

# Auth
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_ACCOUNT_LOCK_DURATION=30

# Profile
SPRING_PROFILES_ACTIVE=prod

# OAuth2 Provider Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# OAuth2 URLs
OAUTH2_SUCCESS_URL=http://localhost:3000/auth/callback
OAUTH2_FAILURE_URL=http://localhost:3000/login?error=oauth2_failed
OAUTH2_REDIRECT_URI=http://localhost:8082

# For production, update redirect URIs:
OAUTH2_SUCCESS_URL=https://yourdomain.com/auth/callback
OAUTH2_FAILURE_URL=https://yourdomain.com/login?error=oauth2_failed
OAUTH2_REDIRECT_URI=https://api.yourdomain.com